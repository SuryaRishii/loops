//Syntax(APP.JS)
import React from 'react';
import './App.css';

const Welcome =(props)=>{
    const{name, greeting}=props

    return(
        <h1 className='message'>
            {greeting}, {name}
        </h1>
    )
}

export default Welcome;

//code:

import React from 'react';
import './App.css';

const Welcome=()=> <h1 className='message'>Heyy Rishii!</h1>
function App() {
  return(
    <div className="App">
    <Welcome/> </div>
  )
}
export default App;

